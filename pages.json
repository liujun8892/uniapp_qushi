					// 导航栏
					"titleNView": {
						// 搜索框
						"searchInput": {
							"autoFocus": false,
							"align": "center",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "5px",
							"placeholder": "搜索趣事",
							"placeholderColor": "#CECECE",
							"disabled": true
						},
						// 按钮
						"buttons": [{
							"color": "#FF9619",
							"float": "left",
							"fontSize": "24px",
							"fontSrc": "/static/font/icon.ttf",
							"text": "\ue609"
						}, {
							"color": "#000000",
							"float": "right",
							"fontSize": "24px",
							"fontSrc": "/static/font/icon.ttf",
							"text": "\ue653"
						}]
					}
				}
			}
		}, {
			"path": "pages/news/news",
